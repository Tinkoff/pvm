; http://editorconfig.org

root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
indent_size = 2

[Makefile]
indent_style = tab
indent_size = 4
end_of_line = lf

[node_modules/**.js]
codepaint = false

[*.{md,snap}]
trim_trailing_whitespace = false
insert_final_newline = false
