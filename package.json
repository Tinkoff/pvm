{
  "name": "pvm",
  "private": true,
  "description": "Featured, powerful and compliant package version/release manager",
  "engines": {
    "node": ">=12.4.0"
  },
  "workspaces": {
    "packages": [
      "packages/*",
      "tools/*",
      "website"
    ]
  },
  "scripts": {
    "test": "jest --verbose",
    "build": "tsc -p tsconfig.json -d",
    "watch": "tsc -p tsconfig.json -d --watch --sourceMap",
    "build-docs": "bash -c 'scripts/build-doc.sh'",
    "check-ts-strict": "tsc -p tsconfig.strict.json -d --noEmit",
    "watch-ts-strict": "tsc -p tsconfig.strict.json -d --watch --noEmit",
    "lint": "eslint --ext .js,.ts packages test",
    "generate-config-schema": "cross-env NODE_OPTIONS=\"--unhandled-rejections=strict\" yarn typescript-json-schema --out packages/pvm-core/config-schema.json packages/pvm-core/config-schema.ts Config && yarn typescript-json-schema --out packages/pvm-core/env-schema.json packages/pvm-core/env-schema.ts Env",
    "check-no-staged-changes": "git diff --name-only --exit-code packages/pvm-core/*",
    "lint:config-schema": "bash -c 'scripts/check-config-sync.sh'"
  },
  "repository": "git@github.com:Tinkoff/pvm.git",
  "author": "Andrey Rublev <box@anru.me>",
  "license": "Apache-2.0",
  "files": [],
  "devDependencies": {
    "@adobe/jsonschema2md": "^4.0.0",
    "@iarna/toml": "^2.2.3",
    "@pvm/artifacts": "workspace:*",
    "@pvm/cli-inline-remark-plugin": "workspace:*",
    "@pvm/core": "workspace:*",
    "@pvm/github": "workspace:*",
    "@pvm/gitlab": "workspace:*",
    "@pvm/mattermost": "workspace:*",
    "@pvm/notifications": "workspace:*",
    "@pvm/plugin-conventional-changelog": "workspace:*",
    "@pvm/plugin-conventional-semantic-release": "workspace:*",
    "@pvm/pvm": "workspace:*",
    "@pvm/slack": "workspace:*",
    "@pvm/update": "workspace:*",
    "@types/cli-table": "^0.3.0",
    "@types/express": "^4.17.13",
    "@types/git-url-parse": "^9.0.0",
    "@types/jest": "26",
    "@types/micromatch": "4.0.1",
    "@types/nock": "^11.1.0",
    "@types/node": "^14.18.0",
    "@types/node-fetch": "^3.0.3",
    "@types/nunjucks": "^3.1.1",
    "@types/semver": "^7.2.0",
    "@types/yargs": "^15.0.10",
    "@typescript-eslint/eslint-plugin": "^4.28.2",
    "@typescript-eslint/parser": "^4.20.0",
    "babel-polyfill": "^6.26.0",
    "bench": "^0.3.6",
    "body-parser": "^1.18.3",
    "brace": "^0.11.1",
    "configstore": "^5.0.0",
    "cross-env": "^7.0.3",
    "date-fns": "^2.7.0",
    "dedent": "^0.7.0",
    "dotenv": "^10.0.0",
    "eslint": "^7.23.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.2.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.1.1",
    "eslint-plugin-pvm": "0.0.0-stub",
    "eslint-plugin-standard": "^5.0.0",
    "express": "^4.16.4",
    "fkill": "^7.0.0",
    "fs-extra": "^9.0.1",
    "glob": "^7.2.0",
    "got": "^11.8.5",
    "jest": "26.6.3",
    "json": "^9.0.6",
    "node-fetch": "^3.1.0",
    "octokit": "^1.7.2",
    "parse-md": "^2.0.4",
    "prismjs": "^1.16.0",
    "remark-parse": "^10.0.1",
    "remark-stringify": "^10.0.2",
    "semver": "^7.3.7",
    "sprout-data": "^1.3.0",
    "ts-jest": "^26.4.4",
    "typescript": "^4.7.3",
    "typescript-json-schema": "^0.51.0",
    "unified": "^10.1.2",
    "verdaccio": "^5.1.6"
  },
  "packageManager": "yarn@3.2.1"
}
